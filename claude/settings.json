{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "opus",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay ~/.claude/sounds/chime.mp3"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay ~/.claude/sounds/snap.mp3"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "edge-skills@ws-claude-marketplace": true,
    "superpowers@ws-claude-marketplace": true,
    "graphite@ws-claude-marketplace": true,
    "lua-lsp@claude-plugins-official": true,
    "ws-staging-sandbox@ws-claude-marketplace": true
  }
}
