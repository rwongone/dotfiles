{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read(~/.claude/**)",
      "Read(~/.claude.json)",
      "Skill(superpowers:*)",
      "Skill(draft-pr:*)",
      "Skill(reading-jira-tickets:*)",
      "mcp__context7",
      "mcp__sourcegraph",
      "mcp__git-commit",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(less:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(whereis:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      "Bash(tree:*)",
      "Bash(cd:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(chmod:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(fd:*)",
      "Bash(jq:*)",
      "Bash(echo:*)",
      "Bash(git:*)",
      "Bash(gt status)",
      "Bash(gt add:*)",
      "Bash(gt commit:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh run view:*)",
      "Bash(/Users/rwong/dotfiles/install.sh --help)",
      "Bash(./install.sh:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)"
    ],
    "deny": [
      "Read(~/**)",
      "Read(**/.env*)",
      "Read(**/credentials*)",
      "Read(**/secrets*)",
      "Write(~/**)",
      "Write(**/.env*)",
      "Write(/etc/**)",
      "Write(/System/**)",
      "Write(/Library/**)",
      "Write(/var/**)",
      "Write(/usr/**)",
      "Write(/bin/**)",
      "Write(/sbin/**)",
      "Edit(~/**)",
      "Edit(**/.env*)",
      "Bash(printenv:*)",
      "Bash(env:*)",
      "Bash(cd ~/*)",
      "Bash(cd /)",
      "Bash(cd /System/*)",
      "Bash(cd /Library/*)",
      "Bash(cd /etc/*)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~/*)",
      "Bash(sudo :*)",
      "Bash(su :*)",
      "Bash(chmod 777 :*)",
      "Bash(chmod -R 777 :*)",
      "Bash(dd :*)",
      "Bash(mkfs:*)",
      "Bash(fdisk :*)",
      "Bash(parted :*)",
      "Bash(eval :*)",
      "Bash(docker system prune:*)",
      "Bash(docker volume prune:*)",
      "Bash(docker network prune:*)",
      "Bash(docker image prune:*)",
      "Bash(docker container prune:*)",
      "Bash(docker rm:*)",
      "Bash(docker rmi:*)",
      "Bash(docker volume rm:*)",
      "Bash(docker network rm:*)",
      "Bash(docker-compose rm:*)",
      "Bash(base64 -d :*)",
      "Bash(openssl :*)",
      "Bash(history :*)",
      "Bash(source ~/*)",
      "Bash(. ~/*)",
      "Bash(python -c:*)",
      "Bash(python2 -c:*)",
      "Bash(python3 -c:*)",
      "Bash(perl -e:*)",
      "Bash(ruby -e:*)",
      "Bash(node -e:*)",
      "Bash(git:*-n:*)",
      "Bash(git:*--no-verify:*)"
    ],
    "ask": [
      "Bash(git reset --hard:*)",
      "Bash(git push -f:*)",
      "Bash(git push --force:*)",
      "Bash(git:*--force:*)",
      "Bash(git branch -D:*)",
      "Bash(docker stop:*)",
      "Bash(docker kill:*)",
      "Bash(docker-compose down:*)",
      "Bash(rm -r:*)",
      "Bash(rm -rf:*)",
      "Bash(kill -9:*)",
      "Bash(pkill -9:*)",
      "Bash(killall -9:*)",
      "Bash(npm :*)",
      "Bash(brew :*)",
      "Bash(pip :*)",
      "Bash(gem :*)",
      "Bash(chmod +x :*)",
      "Bash(chown :*)",
      "Bash(mise dc-nuke)",
      "Bash(nc :*)",
      "Bash(ncat:*)",
      "Bash(netcat:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opus",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay ~/.claude/sounds/chime.mp3"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay ~/.claude/sounds/snap.mp3"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "linear@claude-plugins-official": true
  },
  "fastMode": true
}
